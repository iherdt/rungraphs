<%- model_class = Race -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:distance) %></th>
      <th><%= model_class.human_attribute_name(:temperature) %></th>
      <th><%= model_class.human_attribute_name(:humidity) %></th>
      <th><%= model_class.human_attribute_name(:date_and_time) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:weather) %></th>
      <th><%= model_class.human_attribute_name(:sponsor) %></th>
      <th><%= model_class.human_attribute_name(:club_points) %></th>
      <th><%= model_class.human_attribute_name(:organization) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @races.each do |race| %>
      <tr>
        <td><%= link_to race.id, race_path(race) %></td>
        <td><%= race.name %></td>
        <td><%= race.date %></td>
        <td><%= race.distance %></td>
        <td><%= race.temperature %></td>
        <td><%= race.humidity %></td>
        <td><%= race.date_and_time %></td>
        <td><%= race.location %></td>
        <td><%= race.weather %></td>
        <td><%= race.sponsor %></td>
        <td><%= race.club_points %></td>
        <td><%= race.organization %></td>
        <td><%=l race.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_race_path(race), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      race_path(race),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_race_path,
            :class => 'btn btn-primary' %>
