<%= form_for @race, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :distance, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :distance, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :temperature, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :temperature, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :humidity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :humidity, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date_and_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date_and_time, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :location, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :weather, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :weather, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sponsor, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sponsor, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :club_points, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :club_points, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :organization, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :organization, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                races_path, :class => 'btn' %>
  </div>
<% end %>
