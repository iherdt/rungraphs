<%- model_class = Race -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @race.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @race.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:distance) %>:</strong></dt>
  <dd><%= @race.distance %></dd>
  <dt><strong><%= model_class.human_attribute_name(:temperature) %>:</strong></dt>
  <dd><%= @race.temperature %></dd>
  <dt><strong><%= model_class.human_attribute_name(:humidity) %>:</strong></dt>
  <dd><%= @race.humidity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_and_time) %>:</strong></dt>
  <dd><%= @race.date_and_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @race.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weather) %>:</strong></dt>
  <dd><%= @race.weather %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sponsor) %>:</strong></dt>
  <dd><%= @race.sponsor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:club_points) %>:</strong></dt>
  <dd><%= @race.club_points %></dd>
  <dt><strong><%= model_class.human_attribute_name(:organization) %>:</strong></dt>
  <dd><%= @race.organization %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              races_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_race_path(@race), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              race_path(@race),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<div class="race-results-table">
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
              <% @race.results.first.attributes.keys.each do |property| %>
                <% next if (['created_at', 'updated_at'].include? property) %>
                <th><%= property %></th>
              <% end %>
            </tr>
        </thead>
        <tbody>
            <% @race.results.sort_by(&:overall_place).each do |result| %>
              <tr>
                <% result.attributes.each do |property, value| %>
                  <% next if (['created_at', 'updated_at'].include? property) %>
                  <td><%= value %></td>
                <% end %>
              </tr>
            <% end %>
        </tbody>
    </table>
</div>
