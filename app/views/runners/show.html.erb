<%- model_class = Runner -%>
<div class="page-header">
  <h1>
    <%= "#{@runner.first_name.split.map(&:capitalize).join(' ')} #{@runner.last_name.split.map(&:capitalize).join(' ')}" %>
  </h1>
</div>

<dl class="dl-horizontal">
  <% if @runner.team != '0' && !@runner.team.blank? %>
    <dt><strong>Team:</strong></dt>
    <dd><%= @runner.team %></dd>
  <% else %>
    <dt><strong>Team:</strong></dt>
    <dd>unattached</dd>
  <% end %>
  <dt><strong>Sex:</strong></dt>
  <dd><%= @runner.sex %></dd>
  <dt><strong> Birth year (approx):</strong></dt>
  <dd><%= @runner.birth_year %></dd>
</dl>

<table class="results-table table table-hover">
    <thead>
        <tr>
            <th>Race</th>
            <th>Date</th>
            <th>O</th>
            <th>G</th>
            <th>A</th>
            <th>Age</th>
            <th>Bib</th>
            <th>Team</th>
            <th>Time</th>
            <th>Pace</th>
            <th>AG Time</th>
            <th>AG%</th>
        </tr>
    </thead>
    <tbody>
        <% @runner.results.each do |result| %>
          <tr>
              <td class="result-table-race-td">
                <a href="<%= race_url(result.race.id) %>">
                  <div class="result-table-race-field">
                    <%= "#{result.race.name}" %>
                  </div>
                </a>
              </td>
              <td><%= result.race.date.strftime("%B %d, %Y") %></td>
              <td><%= result.overall_place %></td>
              <td><%= result.gender_place %></td>
              <td><%= result.age_place %></td>
              <td><%= result.age %></td>
              <td><%= result.bib %></td>
              <td><%= result.team %></td>
              <% if result.net_time %>
                <td><%= result.net_time %></td>
              <% elsif result.finish_time %>
                <td><%= result.finish_time %></td>
              <% else %>
                <td><%= result.gun_time %></td>
              <% end %>
              <td><%= result.pace_per_mile %></td>
              <td><%= result.ag_time %> </td>
              <td><%= result.ag_percent %>%</td>
          </tr>
        <% end %>
    </tbody>
</table>