<%- model_class = Runner -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @runner.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @runner.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:team) %>:</strong></dt>
  <dd><%= @runner.team %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sex) %>:</strong></dt>
  <dd><%= @runner.sex %></dd>
  <dt><strong><%= model_class.human_attribute_name(:birth_year) %> (approx):</strong></dt>
  <dd><%= @runner.birth_year %></dd>
</dl>

<table class="results-table table table-hover">
    <thead>
        <tr>
            <th>Race</th>
            <th>Date</th>
            <th>O</th>
            <th>G</th>
            <th>A</th>
            <th>Age</th>
            <th>Bib</th>
            <th>Net Time</th>
            <th>Pace</th>
            <th>AG Time</th>
            <th>AG%</th>
        </tr>
    </thead>
    <tbody>
        <% @results.each do |result| %>
          <tr>
              <td><%= link_to "#{result.race.name}", controller: "races", action: "show", id: "#{result.race.id}"%></td>
              <td><%= result.race.date %></td>
              <td><%= result.overall_place %></td>
              <td><%= result.gender_place %></td>
              <td><%= result.age_place %></td>
              <td><%= result.age %></td>
              <td><%= result.bib %></td>
              <td><%= result.net_time %></td>
              <td><%= result.pace_per_mile %></td>
              <td><%= result.ag_time %> </td>
              <td><%= result.ag_percent %>%</td>
          </tr>
        <% end %>
    </tbody>
</table>